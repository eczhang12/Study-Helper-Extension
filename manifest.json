{
    "manifest_version": 3,
    "name": "The Study Buddy",
    "version": "1.0",
    "description": "A study helper project",
    "permissions": [
      "storage",
      "alarms",
      "notifications",
      "contextMenus",
      "tabs",
      "activeTab"
    ],
    "background": {
      "service_worker": "scripts/background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["scripts/content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Study Buddy",
      "default_icon": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
      }
    },
    "icons": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  }
  