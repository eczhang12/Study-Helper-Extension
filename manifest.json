{
    "manifest_version": 3,
    "name": "The Study Buddy",
    "version": "1.0",
    "description": "A Chrome extension to help students study with Pomodoro timers, a to-do list, and word definitions.",
    "permissions": [
        "storage",
        "activeTab",
        "notifications", 
        "background",
        "alarms"
    ],
    "background": {
        "persistent": true,
        "service_worker": "scripts/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["scripts/content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon.png",
            "48": "icons/icon.png",
            "128": "icons/icon.png"
        }
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
}